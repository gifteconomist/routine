doctype html
html
  head
    meta(charset="UTF-8")
    meta(name='viewport' content='width=device-width,initial-scale=1')
    title #{title} | Routine Magazine
    meta(name="description" content="#{indexSubtitle}: A review of #{titleMeta} by #{contributor.name}")
    link(rel='stylesheet', href='../css/styles.css')
    block socialMeta
  body(class="body-review")
    div(class="row nav")
      .brand__items
        .brand-logo
          a(href="/") R
          a(href="/" class="outine") outine
        .nav-title= title
      nav(class="nav__items")
        a(href="/about") about 
        a(href="/reviews") reviews
    .stage
      .stage__text
        .stage__text__title
          h1!= title
          p!= subtitle
          p(class="author") by #[span #[a(href="/contributors/#{contributor.slug}") #{contributor.name}]] on #{date}
        .stage__text__image--main
          block stageImageMain
        block stageText
        p(class="author-blurb") #[b #[a(href="/contributors/#{contributor.slug}") #{contributor.name}]] #{contributor.bio}
      .related-content 
        h4 More Pieces
        .row
          each relatedArticle in relatedContent
            a(class="related-content__item" href="#{relatedArticle.name}")
              img(src="https://assets.routinemagazine.com/img/load.png" data-src='https://assets.routinemagazine.com/img/#{relatedArticle.leadImage}' class="lazyload" alt="#{relatedArticle.name} is related")
              h5 #[span #{relatedArticle.type}]: !{relatedArticle.indexTitle}
    include ../includes/footer.jade
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    script(type='text/javascript', src='../js/jquery.unveil.js')
    script(type='text/javascript', src='../js/script.js')
